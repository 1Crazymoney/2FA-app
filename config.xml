<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="4" id="com.digitalbitbox.tfa" ios-CFBundleVersion="0.1.1" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DigitalBitbox2FA</name>
    <description>Verify Digital Bitbox actions.</description>
    <author email="info@digitalbitbox.com" href="http://digitalbitbox.com">Digital Bitbox</author>
    <content src="index.html" />
    <access origin="*" />
    <!-- blockchain parsing sites -->
    <allow-intent href="https://insight.bitpay.com/*"/>
    <allow-intent href="https://blockexplorer.com/*"/>
    <allow-intent href="https://blockchain.info/*"/>
    <allow-intent href="ws://*"/>
    <allow-intent href="gap://*"/>
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    
    <icon src="www/img/icons/logo_circle_bg.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    
    <platform name="android">
        <icon density="ldpi" src="www/img/icons/logo-android-round/drawable-ldpi/ic_launcher.png" />
        <icon density="mdpi" src="www/img/icons/logo-android-round/drawable-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="www/img/icons/logo-android-round/drawable-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="www/img/icons/logo-android-round/drawable-xhdpi/ic_launcher.png" />
        <splash src="www/img/splash.png" density="port-ldpi"/>
        <splash src="www/img/splash.png" density="port-mdpi"/>
        <splash src="www/img/splash.png" density="port-hdpi"/>
        <splash src="www/img/splash.png" density="port-xhdpi"/>
        <splash src="www/img/splash.png" density="land-ldpi"/>
        <splash src="www/img/splash.png" density="land-mdpi"/>
        <splash src="www/img/splash.png" density="land-hdpi"/>
        <splash src="www/img/splash.png" density="land-xhdpi"/> 
    </platform>
    
    <platform name="ios">
        <icon height="180" src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-60@3x.png" width="180" />
        <icon height="60" src="www/img/icons/logo-square-ios/Icon-60.png" width="60" />
        <icon height="120" src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-60@2x.png" width="120" />
        <icon height="76" src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-76.png" width="76" />
        <icon height="152" src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-76@2x.png" width="152" />
        <icon height="40" src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-40.png" width="40" />
        <icon height="80" src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-40@2x.png" width="80" />
        <icon height="57" src="www/img/icons/logo-square-ios/Icon.png" width="57" />
        <icon height="114" src="www/img/icons/logo-square-ios/Icon@2x.png" width="114" />
        <icon height="72" src="www/img/icons/logo-square-ios/Icon-72.png" width="72" />
        <icon height="144" src="www/img/icons/logo-square-ios/Icon-72@2x.png" width="144" />
        <icon height="29" src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-Small.png" width="29" />
        <icon height="58" src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-Small@2x.png" width="58" />
        <icon height="50" src="www/img/icons/logo-square-ios/Icon-Small-50.png" width="50" />
        <icon height="100" src="www/img/icons/logo-square-ios/Icon-Small-50@2x.png" width="100" />
        <!-- TODO - - not tested -->
        <splash src="www/img/splash.png" width="320" height="480"/>
        <splash src="www/img/splash.png" width="640" height="960"/>
        <splash src="www/img/splash.png" width="768" height="1024"/>
        <splash src="www/img/splash.png" width="1536" height="2048"/>
        <splash src="www/img/splash.png" width="1024" height="768"/>
        <splash src="www/img/splash.png" width="2048" height="1536"/>
        <splash src="www/img/splash.png" width="640" height="1136"/>
        <splash src="www/img/splash.png" width="750" height="1334"/>
        <splash src="www/img/splash.png" width="1242" height="2208"/>
        <splash src="www/img/splash.png" width="2208" height="1242"/>
    </platform>
    <preference name="xwalkVersion" value="15+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
