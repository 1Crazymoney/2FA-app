<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="com.digitalbitbox.qr" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    version="0.0.1" 
    android-versionCode="1"
    ios-CFBundleVersion="0.0.1" 
    >
    
    <name>DigitalBitboxQR</name>
    <description>Scan QR codes to verify transactions.</description>
    <author email="info@digitalbitbox.com" href="http://digitalbitbox.com">Digital Bitbox</author>
    <content src="index.html" />
    <access origin="*" />
    
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    
    
    <icon src="www/img/icons/logo_circle_bg.png" />
    
    <platform name="android">
        <icon src="www/img/icons/logo-android-round/drawable-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="www/img/icons/logo-android-round/drawable-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="www/img/icons/logo-android-round/drawable-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="www/img/icons/logo-android-round/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
    </platform>

    <platform name="ios">
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-60@3x.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="www/img/icons/logo-square-ios/Icon-60.png" width="60" height="60" />
              <icon src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-76.png" width="76" height="76" />
              <icon src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-76@2x.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-40.png" width="40" height="40" />
              <icon src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-40@2x.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="www/img/icons/logo-square-ios/Icon.png" width="57" height="57" />
              <icon src="www/img/icons/logo-square-ios/Icon@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="www/img/icons/logo-square-ios/Icon-72.png" width="72" height="72" />
              <icon src="www/img/icons/logo-square-ios/Icon-72@2x.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-Small.png" width="29" height="29" />
              <icon src="www/img/icons/logo-square-ios/AppIcon.appiconset/Icon-Small@2x.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="www/img/icons/logo-square-ios/Icon-Small-50.png" width="50" height="50" />
              <icon src="www/img/icons/logo-square-ios/Icon-Small-50@2x.png" width="100" height="100" />
    </platform>
 
 </widget>
